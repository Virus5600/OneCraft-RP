{
	"format_version": "1.8.0",
	"animations": {
		"animation.glider.use": {
			"loop": true,
			"bones": {
				"leftArm": {
					"rotation": ["(-180 - this) * !v.is_first_person", "-this * !v.is_first_person", "-this * !v.is_first_person"],
					"position": [0, "2 * !v.is_first_person", 0]
				},
				"rightArm": {
					"rotation": ["(-180 - this) * !v.is_first_person", "-this * !v.is_first_person", "-this * !v.is_first_person"],
					"position": [0, "(-this - 2) + 2 * !v.is_first_person", 0]
				},
				"leftLeg": {
					"rotation": ["-this", 0, 0]
				},
				"rightLeg": {
					"rotation": ["-this", 0, 0]
				}
			}
		}
	}
}