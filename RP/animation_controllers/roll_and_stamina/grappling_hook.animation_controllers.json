{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.grappling_hook.item.first_person": {
			"states": {
				"default": {
					"animations": [
						{
							"cooldown": "context.is_first_person + 0.001"
						},
						{
							"third_person.cooldown": "!context.is_first_person + 0.001"
						}
					],
					"transitions": [
						{
							"fire": "query.any_animation_finished && query.is_using_item && variable.start_recharge < 2"
						}
					],
					"blend_transition": 0.1
				},
				"fire": {
					"animations": [
						{
							"fire": "context.is_first_person + 0.001"
						},
						{
							"third_person.fire": "!context.is_first_person + 0.001"
						}
					],
					"transitions": [
						{
							"default": "!query.is_using_item || variable.start_recharge > 1"
						}
					]
				}
			}
		},
		"controller.animation.grappling_hook.item.third_person": {
			"states": {
				"default": {
					"animations": [
						{
							"third_person.cooldown": "!context.is_first_person"
						}
					],
					"transitions": [
						{
							"fire": "query.all_animations_finished && query.is_using_item"
						}
					],
					"blend_transition": 0.1
				},
				"fire": {
					"animations": [
						{
							"third_person.fire": "!context.is_first_person"
						}
					],
					"transitions": [
						{
							"default": "!query.is_using_item || variable.start_recharge > 1"
						}
					]
				}
			}
		}
	}
}