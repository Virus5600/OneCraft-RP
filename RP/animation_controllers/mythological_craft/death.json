{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.mythological_craft.mc_death": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
						  	"idle": "(query.ground_speed == 0.0 && query.is_on_ground && !query.is_saddled && !query.is_delayed_attacking && !query.is_sheared && !query.is_stunned) || (query.mark_variant == 2 && query.is_delayed_attacking)"
						},
						{
						  	"attack2": "query.mark_variant == 2 && query.is_delayed_attacking"
						}
					],
					"transitions": [
						{
							"move": "query.ground_speed > 0.0 && !query.is_delayed_attacking && !query.is_sheared && !query.is_saddled && !query.is_stunned"
						},
						{
							"target_acquired": "query.is_saddled && !query.is_delayed_attacking"
						},
						{
							"attack1": "query.mark_variant == 1 && query.is_delayed_attacking"
						}
					]
				},
				"move": {
					"animations": [
						"move"
					],
					"transitions": [
					 	{
					   		"default": "(query.ground_speed == 0.0 && query.is_on_ground && !query.is_saddled && !query.is_delayed_attacking && !query.is_sheared && !query.is_stunned) || (query.mark_variant == 2 && query.is_delayed_attacking)"
					 	},
					 	{
							"target_acquired": "query.is_saddled && !query.is_delayed_attacking"
						},
						{
							"attack1": "query.mark_variant == 1 && query.is_delayed_attacking"
						}
					]
				},
				"target_acquired": {
					"animations": [
					  "target_acquired"
					],
					"transitions": [
					 	{
					   		"default": "(query.ground_speed == 0.0 && query.is_on_ground && !query.is_saddled && !query.is_delayed_attacking && !query.is_sheared && !query.is_stunned) || (query.mark_variant == 2 && query.is_delayed_attacking)"
					 	},
					 	{
					   		"move": "query.ground_speed > 0.0 && !query.is_delayed_attacking && !query.is_sheared && !query.is_saddled && !query.is_stunned"
					 	},
						{
							"attack1": "query.mark_variant == 1 && query.is_delayed_attacking"
						}
					]
				},
				"attack1": {
					"animations": [
					  "attack1"
					],
					"transitions": [
					 	{
					   		"default": "(query.ground_speed == 0.0 && query.is_on_ground && !query.is_saddled && !query.is_delayed_attacking && !query.is_sheared && !query.is_stunned) || (query.mark_variant == 2 && query.is_delayed_attacking)"
					 	},
					 	{
					   		"move": "query.ground_speed > 0.0 && !query.is_delayed_attacking && !query.is_sheared && !query.is_saddled && !query.is_stunned"
					 	},
						{
							"target_acquired": "query.is_saddled && !query.is_delayed_attacking"
						}
					]
				}
			}
		}
	}
}