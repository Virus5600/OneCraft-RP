{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.mythological_craft.mc_raven": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
						  	"idle": "query.ground_speed == 0.0 && query.is_on_ground"
						}
					],
					"transitions": [
					   	{
						 	"move": "query.ground_speed > 0.0 && query.is_on_ground"
					   	},
					   	{
						 	"fly": "query.ground_speed > 0.0 && !query.is_on_ground"
					   	}
					]
				},
				"move": {
					"animations": [
						"move"
					],
					"transitions": [
					 	{
					   		"default": "query.ground_speed == 0.0 && query.is_on_ground"
					 	},
					 	{
					  	 	"fly": "query.ground_speed > 0.0 && !query.is_on_ground"
					 	}
					]
				},
				"fly": {
					"animations": [
					  "fly"
					],
					"transitions": [
					 	{
					   		"default": "query.ground_speed == 0.0 && query.is_on_ground"
					 	},
					 	{
					   		"move": "query.ground_speed > 0.0 && query.is_on_ground"
					 	}
					]
				}
			}
		}
	}
}