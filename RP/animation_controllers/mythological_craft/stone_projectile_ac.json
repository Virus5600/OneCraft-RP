{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.mythological_craft.stone_projectile": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
					   {
						 	"move": "query.ground_speed > 0.0"
					   }
					]
				},
				"move": {
					"animations": [
						"move"
					],
					"transitions": [
					 	{
					   		"default": "query.ground_speed < 0.0"
					 	}
					]
				}
			}
		}
	}
}