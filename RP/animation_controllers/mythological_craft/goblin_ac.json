{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.mythological_craft.goblin.walk": {
			"initial_state": "standing",
			"states": {
				"standing": {
					"blend_transition": 0.2,
					"animations": ["idle"],
					"transitions": [
						{
							"moving": "query.modified_move_speed > 0.1"
						}
					]
				},
				"moving": {
					"blend_transition": 0.2,
					"animations": ["move"],
					"transitions": [
						{
							"standing": "query.modified_move_speed < 0.1"
						}
					]
				}
			}
		},
		"controller.animation.mythological_craft.goblin.sitting": {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"animations" : [ "idle" ],
					"transitions" : [
						{
							"sitting" : "query.is_sitting"
						}
					]
				},
				"sitting" : {
					"animations" : [ "sitting" ],
					"transitions" : [
						{
							"default" : "!query.is_sitting"
						}
					]
				}
			}
		}
	}
}