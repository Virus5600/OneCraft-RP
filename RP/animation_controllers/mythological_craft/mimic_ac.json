{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.mythological_craft.mimic": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
						  "idle": "(query.ground_speed == 0.0 && (query.is_on_ground || query.is_in_water)) || (query.mark_variant == 2 && query.is_delayed_attacking)"
						}
					],
					"transitions": [
					   {
						 "move": "query.ground_speed > 0.0 && !query.is_delayed_attacking"
					   },
					   {
						 "normal_attack": "query.mark_variant == 1 && query.is_delayed_attacking"
					   }
					]
				},
				"move": {
					"animations": [
						"move"
					],
					"transitions": [
					 	{
					   		"default": "(query.ground_speed == 0.0 && !query.is_delayed_attacking) || (query.mark_variant == 2 && query.is_delayed_attacking)"
					 	},
					 	{
					  	 	"normal_attack": "query.mark_variant == 1 && query.is_delayed_attacking"
					 	}
					]
				},
				"normal_attack": {
					"animations": [
					  "normal_attack"
					],
					"transitions": [
					 	{
					   		"default": "(query.ground_speed == 0.0 && !query.is_delayed_attacking) || (query.mark_variant == 2 && query.is_delayed_attacking)"
					 	},
					 	{
					   		"move": "query.ground_speed > 0.0 && !query.is_delayed_attacking"
					 	}
					]
				}
			}
		}
	}
}