{
	"format_version": "1.10.0",
	"minecraft:attachable": {
		"description": {
			"identifier": "ocrp:grappling_hook_item",
			"materials": {
				"default": "entity_alphatest",
				"enchanted": "entity_alphatest_glint"
			},
			"textures": {
				"default": "textures/models/roll_and_stamina/grappling_hook",
				"enchanted": "textures/misc/enchanted_item_glint"
			},
			"geometry": {
				"default": "geometry.grappling_hook_item"
			},
			"animations": {
				"first_person_controller": "controller.animation.grappling_hook.item.first_person",
				"third_person_controller": "controller.animation.grappling_hook.item.third_person",
				"cooldown": "animation.grappling_hook.item.cooldown",
				"third_person.fire": "animation.grappling_hook.item.third_person.fire",
				"third_person.cooldown": "animation.grappling_hook.item.third_person.cooldown",
				"fire": "animation.grappling_hook.item.fire",
				"first_person": "animation.grappling_hook.item.first_person"
			},
			"particle_effects": {
				"grappling_hook_smoke": "ocrp:grappling_hook_smoke"
			},
			"scripts": {
				"initialize": [
					"variable.start_recharge = 0;",
					"variable.start_cooldown = true;"
				],
				"pre_animation": [
					"(!query.is_using_item && variable.start_recharge > 0) ? { variable.start_recharge = 0; };",
					"variable.is_cooldown = (query.cooldown_time_remaining != 0);",
					"(variable.start_cooldown != variable.is_cooldown) ? { variable.start_cooldown = variable.is_cooldown; variable.start_recharge = variable.start_recharge + 1; };"
		],
		"animate": [
			{
				"first_person": "context.is_first_person"
			},
			"first_person_controller"
		]
	},
	"render_controllers": [
		"controller.render.item_default"
	]
}
}
}