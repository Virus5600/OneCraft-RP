{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ocrp:move_smoke",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particle/campfire_smoke"
			}
		},
		"curves": {
			"variable.size_curve": {
				"type": "bezier",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0.57, 1.69, 0, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 10,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, 0.1, 0],
				"radius": 0.5,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "1 + variable.particle_random_2"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "variable.particle_random_1 * 360",
				"rotation_rate": "360 * (variable.particle_random_1 - 0.5) * 2"
			},
			"minecraft:particle_initial_speed": 1,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 0.5, 0],
				"linear_drag_coefficient": 4,
				"rotation_acceleration": 1,
				"rotation_drag_coefficient": 4
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.5 * variable.size_curve", "0.5 * variable.size_curve"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 192,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [16, 16],
						"step_UV": [0, 16],
						"frames_per_second": 16,
						"max_frame": 16,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.77": "#00292926"
					}
				}
			}
		}
	}
}