{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.animal_mounts.has_rider": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"has_rider": "query.has_rider"
						}
					],
					"on_entry": [
						"@s has_rider"
					]
				},
				"has_rider": {
					"transitions": [
						{
							"default": "!query.has_rider"
						}
					]
				},
				"on_exit": {
					"on_exit": [
						"@s no_rider"
					]
				}
			}
		}
	}
}