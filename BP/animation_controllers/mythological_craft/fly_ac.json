{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.mythological_craft.fly": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"flying": "(1.0)"
						}
					],
					"on_entry": [
						"/function fly_function"
					]
				},
				"flying": {
					"transitions": [
						{
							"default": "query.has_rider && query.is_saddled"
						}
					],
					"on_entry": [
						"/function fly_function"
					]
				}
			}
		},
		"controller.animation.mythological_craft.remove_effect": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"flying": "(1.0)"
						}
					],
					"on_entry": [
						"/tag @s remove rider"
					]
				},
				"flying": {
					"transitions": [
						{
							"default": "!query.has_rider && !query.is_saddled"
						}
					],
					"on_entry": [
						"/tag @s remove rider"
					]
				}
			}
		}
	}
}