{
    "format_version": "1.10.0",
    "animation_controllers":{
      "controller.animation.mythological_craft.ogre_health":{
        "states":{
          "default":{
            "transitions":[
              {
                "ogre_axe": "query.health <= 200"
              }
            ]
          },
          "ogre_axe":{
            "transitions":[
              {
                "default": "query.health > 200"
              }
            ],
            "on_entry":[
              "@s roaring"
            ]
          }
        }
      }
    }
  }