{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.mythological_craft.entity_death": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [ 
            { 
              "death": "!query.is_alive"
            }
          ],
          "on_exit": [ 
            "/event entity @e[type=ocrp:leshy] end_wait" 
          ]
        },
        "death": {
          "transitions": [ 
            { 
              "default": "query.is_alive" 
            } 
          ]
        }
      }
    }
  }
}
