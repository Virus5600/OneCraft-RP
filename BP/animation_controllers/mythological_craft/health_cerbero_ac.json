{
    "format_version": "1.10.0",
    "animation_controllers":{
      "controller.animation.mythological_craft.cerbero_health":{
        "states":{
          "default":{
            "transitions":[
              {
                "ogre_axe": "query.health <= 100 && !query.is_tamed"
              }
            ]
          },
          "ogre_axe":{
            "transitions":[
              {
                "default": "query.health > 100"
              }
            ],
            "on_entry":[
              "@s roaring"
            ]
          }
        }
      }
    }
  }