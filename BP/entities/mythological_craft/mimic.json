{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "ocrp:mimic",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "scripts": {
        "animate": [
          "attack"
        ]
      },
      "animations": {
        "attack": "controller.animation.mythological_craft.entity_attack"
      }
    },
    "components": {
      "minecraft:type_family": {"family": [ "monster", "mob" ]},

      "minecraft:jump.static":{
        "jump_power": 0.42
      },

      "minecraft:can_climb": {},

      "minecraft:physics": {},

      "minecraft:loot": {"table": "loot_tables/entities/mimic.json"},
      
      "minecraft:health": {"value": 50, "max": 50},

      "minecraft:collision_box": {"width": 0.9, "height": 1.3},

      "minecraft:movement.basic": {
        "max_turn": 15
      },

      "minecraft:movement": {"value": 0.36},

      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": false,
        "avoid_damage_blocks": true
      },

      "minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? math.random(30, 50) : 35"
      },

      "minecraft:nameable": {},

      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },

      "minecraft:is_hidden_when_invisible": {},

      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },

      "minecraft:despawn": {
        "despawn_from_distance": {}
      },

      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },

      "minecraft:behavior.random_look_around": {"priority": 7},

      "minecraft:behavior.random_stroll": {"priority": 6, "speed_multiplier": 1},

      "minecraft:behavior.look_at_player": {"priority": 7, "look_distance": 6, "probability": 0.02},
      
      "minecraft:behavior.hurt_by_target": {"priority": 1},

      "minecraft:behavior.float": {
        "priority": 0
      },

      "minecraft:behavior.look_at_entity": {
				"priority": 7,
				"angle_of_view_horizontal": 45,
				"angle_of_view_vertical": 0,
				"probability": 100
			},

      "minecraft:behavior.look_at_target": {
        "priority": 9,
        "look_distance": 8.0,
        "probability": 1.0
      },
      
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {  
              "any_of": [
                { 
                  "test": "is_family", 
                  "subject": "other", 
                  "value": "player" 
                }
              ]
            },
            "max_dist": 30
          }
        ],
        "must_see": true
      },

      "minecraft:behavior.delayed_attack": {
        "priority": 0,
        "track_target": false,
        "hit_delay_pct": 0.15,
        "reach_multiplier": 1.8,
        "speed_multiplier": 1.0,
        "attack_duration": 0.73
      },

      "minecraft:attack": {"damage": 10},

      "minecraft:follow_range": {
        "value": 32
      }
    },

    "component_groups": {
      "normal_attack": {
        "minecraft:mark_variant": {
          "value": 1
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "track_target": false,
          "hit_delay_pct": 0.15,
          "reach_multiplier": 1.8,
          "speed_multiplier": 1.0,
          "attack_duration": 0.73
        },
        "minecraft:attack": {
          "damage": 10
        }
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 100,
            "add": {
              "component_groups": [
                "normal_attack"
              ]
            }
          }
        ]
      },
      "ocrp:entity_attack":{
        "randomize": [
          {
            "weight": 100,
            "add": {
              "component_groups": [
                "normal_attack"
              ]
            }
          }
        ]
      }
    }
  }
}