{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "ocrp:death",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "scripts": {
        "animate": [
          "attack"
        ]
      },
      "animations": {
        "attack": "controller.animation.mythological_craft.entity_attack"
      }
    },
    "components": {
      "minecraft:type_family": {"family": [ "monster", "mob", "death" ]},

      "minecraft:jump.static":{
        "jump_power": 0.42
      },

      "minecraft:can_climb": {},

      "minecraft:physics": {},

      "minecraft:loot": {"table": "loot_tables/entities/death.json"},
      
      "minecraft:health": {"value": 20, "max": 20},

      "minecraft:collision_box": {"width": 0.7, "height": 1.2},

      "minecraft:movement.basic": {
      },

      "minecraft:movement": {"value": 0.40},

      "minecraft:navigation.walk": {
        "can_path_over_water": true
      },

      "minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? math.random(30, 50) : 35"
      },

      "minecraft:nameable": {},

      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },

      "minecraft:is_hidden_when_invisible": {},

      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },

      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },

      "minecraft:behavior.random_stroll": {"priority": 6, "speed_multiplier": 1},
      
      "minecraft:behavior.hurt_by_target": {"priority": 1},

      "minecraft:behavior.float": {
        "priority": 0
      },

      "minecraft:behavior.look_at_target": {
        "priority": 9,
        "look_distance": 8.0,
        "probability": 1.0
      },
      
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {  
              "any_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                }
              ]
            },
            "max_dist": 30
          }
        ],
        "must_see": true
      },

      "minecraft:follow_range": {
        "value": 16
      },

      "minecraft:scale": {
        "value": 1.0
      },
      
			"minecraft:fire_immune": true,

      "minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": false
					}
				]
			},

      "minecraft:on_target_acquired": {
				"event": "target_acquired",
				"target": "self"
			},

			"minecraft:on_target_escape": {
				"event": "target_escape",
				"target": "self"
			},

      "minecraft:home": {
        "restriction_radius": 16
      },

      "minecraft:knockback_resistance": {
        "value": 0.5
      }
    },

    "component_groups": {
      "minecraft:parrot1": {
        "minecraft:variant": { "value": 1 }
      },

      "minecraft:parrot2": {
        "minecraft:variant": { "value": 2 }
      },

      "normal_attack": {
        "minecraft:mark_variant": {
          "value": 1
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "track_target": true,
          "hit_delay_pct": 0.15,
          "reach_multiplier": 1.8,
          "speed_multiplier": 1.0,
          "attack_duration": 0.73
        },
        "minecraft:attack": {
          "damage": 6
        }
      },
      
      "second_attack": {
        "minecraft:mark_variant": {
          "value": 2
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "track_target": true,
          "hit_delay_pct": 0.15,
          "reach_multiplier": 1.8,
          "speed_multiplier": 1.0,
          "attack_duration": 0.73
        },
        "minecraft:attack": {
          "damage": 8
        }
      },

      "roaring": {
        "minecraft:is_saddled": {},
        "minecraft:timer": {
					"time": [1.35, 1.35],
					"looping": false,
					"time_down_event": {
						"event": "target_escape",
						"target": "self"
					}
				},
        "minecraft:movement": {
          "value": 0
        }
      },

      "player_sensor": {
        "minecraft:entity_sensor": {
					"sensor_range": 16,
					"event": "target_acquired",
					"event_filters": {
						"test": "is_family",
						"subject": "other",
						"operator": "==",
						"value": "player"
					}
				}
      },

      "normal_movement": {
        "minecraft:movement": {
          "value": 0.40
        }
      },

      "active_attack": { 
        "minecraft:timer": {
					"time": [0.1, 0.1],
					"looping": false,
					"time_down_event": {
						"event": "ocrp:entity_attack",
						"target": "self"
					}
				}
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 50,
            "add": {
              "component_groups": [
                "minecraft:parrot1",
                "player_sensor",
                "normal_attack"
              ]
            },
            "remove": {
              "component_groups": [
                "second_attack"
              ]
            }
          },
          {
            "weight": 50,
            "add": {
              "component_groups": [
                "minecraft:parrot2",
                "player_sensor",
                "second_attack"
              ]
            },
            "remove": {
              "component_groups": [
                "normal_attack"
              ]
            }
          }
        ]
      },
      "ocrp:entity_attack":{
        "randomize": [
          {
            "weight": 60,
            "add": {
              "component_groups": [
                "normal_attack"
              ]
            },
            "remove": {
              "component_groups": [
                "second_attack"
              ]
            }
          },
          {
            "weight": 45,
            "add": {
              "component_groups": [
                "second_attack"
              ]
            },
            "remove": {
              "component_groups": [
                "normal_attack"
              ]
            }
          }
        ]
      },
      "target_acquired": {
				"add": {
					"component_groups": [
            "roaring"
          ]
				},
        "remove": {
					"component_groups": [
            "player_sensor"
          ]
				}
			},
			"target_escape": {
        "remove": {
					"component_groups": [
            "roaring"
          ]
				},
        "add": {
					"component_groups": [
            "active_attack",
            "normal_movement"
          ]
				}
      }
    }
  }
}