        "priority": 9,
        "look_distance": 8.0,
        "probability": 1.0
      },
      
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {  
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "inanimate"
                },
                {
                 "test": "is_family",
                 "subject": "other",
                 "operator": "!=",
