        "can_break_doors": true,
        "can_swim": true,
        "can_walk": true,
        "avoid_sun": true
      },

      "minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? math.random(30, 50) : 35"
      },

      "minecraft:nameable": {},

