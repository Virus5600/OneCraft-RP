{
    "format_version": "1.17.0",
    "minecraft:entity": {
        "description": {
            "identifier": "ocrp:leshy_wood_attack1",
            "is_spawnable": false,
            "is_summonable": true
        },

        "components": {
            "minecraft:type_family": {"family": [ "inanimate" ]},

            "minecraft:health": {
                "value": 1,
                "max": 1
            },
            "minecraft:collision_box": {
                "height": 0.8,
                "width": 0.8
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": false
                    }
                ]
            },
            "minecraft:knockback_resistance": {
                "value": 100,
                "max": 100
            },
            
            "minecraft:physics": {
            },

            "minecraft:area_attack": {
                "damage_per_tick": 11,
                "damage_range": 1.8,
                "cause": "entity_attack"
            },

            "minecraft:behavior.melee_attack": {
                "priority": 3,
                "melee_fov": 360
            },

            "minecraft:behavior.nearest_attackable_target": {
                "priority": 2,
                "reselect_targets": true,
                "entity_types": [
                    {
                        "filters": {  
                            "all_of": [
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "operator": "!=",
                                    "value": "inanimate"
                                }
                            ]
                        },
                        "max_dist": 30
                    }
                ],
                "must_see": true
            },

            "minecraft:attack": {
                "damage": 11
            },

            "minecraft:timer": {
                "looping": false,
                "time": 0.25,
                "time_down_event": {
                    "event": "dspn",
                    "target": "self"
                }
            }
        },

        "component_groups": {
            "dspn":{
                "minecraft:timer": {
                    "looping": false,
                    "time": 2,
                    "time_down_event": {
                        "event": "dspn2",
                        "target": "self"
                    }
                },
                "minecraft:attack": {
                    "damage": 0
                }
            },

            "dspn2":{
                "minecraft:instant_despawn": {
                    "remove_child_entities": false
                }
            }
        },

        "events": {
            "dspn":{
                "sequence": [
                    {
                        "add": {
                            "component_groups": [
                                "dspn"
                            ]
                        }
                    }
                ]
            },
            "dspn2":{
                "add": {
                    "component_groups": [
                        "dspn2"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "dspn"
                    ]
                }
            }
        }
    }
}