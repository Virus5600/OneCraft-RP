{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "ocrp:friendly_giant_bear",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },
    "components": {
      "minecraft:type_family": {"family": [ "player", "mob" ]},

      "minecraft:jump.static":{
        "jump_power": 0.42
      },

      "minecraft:can_climb": {},

      "minecraft:physics": {},
      
      "minecraft:health": {"value": 100, "max": 100},

      "minecraft:collision_box": {"width": 0.8, "height": 1.0},

      "minecraft:movement.basic": {
        "max_turn": 15
      },

      "minecraft:movement": {"value": 0.38},

      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": false,
        "avoid_damage_blocks": true
      },

      "minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? math.random(30, 50) : 35"
      },

      "minecraft:nameable": {},

      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },

      "minecraft:is_hidden_when_invisible": {},

      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },

      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },

      "minecraft:behavior.random_stroll": {"priority": 6, "speed_multiplier": 1},
      
      "minecraft:behavior.hurt_by_target": {"priority": 1},

      "minecraft:behavior.float": {
        "priority": 0
      },

      "minecraft:behavior.look_at_target": {
        "priority": 9,
        "look_distance": 8.0,
        "probability": 1.0
      },
      
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {  
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "monster"
                },
                {
                 "test": "is_family",
                 "subject": "other",
                 "operator": "!=",
                 "value": "creeper"
                }
              ]
            },
            "max_dist": 30
          }
        ],
        "must_see": true
      },

      "minecraft:follow_range": {
        "value": 16
      },

      "minecraft:scale": {
        "value": 2.0
      },

      "minecraft:knockback_resistance": {
        "value": 1.0
      },

      "minecraft:is_tamed": {
      },
      "minecraft:behavior.follow_owner": {
        "priority": 6,
        "speed_multiplier": 1.0,
        "start_distance": 10,
        "stop_distance": 2
      },
      "minecraft:behavior.owner_hurt_by_target": {
        "priority": 2
      },
      "minecraft:behavior.owner_hurt_target": {
        "priority": 3
      },

      "minecraft:timer": {
				"looping": false,
				"time": [ 40, 40 ],
				"time_down_event": {
					"event": "dspn"
				}
			}
    },

    "component_groups": {
      "normal_attack": {
        "minecraft:mark_variant": {
          "value": 1
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "track_target": true,
          "hit_delay_pct": 0.10,
          "reach_multiplier": 1.8,
          "speed_multiplier": 1.0,
          "attack_duration": 0.71
        },
        "minecraft:attack": {
          "damage": 8
        }
      },
      
      "second_attack": {
        "minecraft:mark_variant": {
          "value": 2
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "track_target": true,
          "hit_delay_pct": 0.10,
          "reach_multiplier": 1.8,
          "speed_multiplier": 1.0,
          "attack_duration": 0.71
        },
        "minecraft:attack": {
          "damage": 10
        }
      },

      "dspn": {
				"minecraft:instant_despawn": {
					"remove_child_entities": true
				}
			}
    },

    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 60,
            "add": {
              "component_groups": [
                "normal_attack"
              ]
            },
            "remove": {
              "component_groups": [
                "second_attack"
              ]
            }
          },
          {
            "weight": 45,
            "add": {
              "component_groups": [
                "second_attack"
              ]
            },
            "remove": {
              "component_groups": [
                "normal_attack"
              ]
            }
          }
        ]
      },
      "ocrp:entity_attack":{
        "randomize": [
          {
            "weight": 60,
            "add": {
              "component_groups": [
                "normal_attack"
              ]
            },
            "remove": {
              "component_groups": [
                "second_attack"
              ]
            }
          },
          {
            "weight": 45,
            "add": {
              "component_groups": [
                "second_attack"
              ]
            },
            "remove": {
              "component_groups": [
                "normal_attack"
              ]
            }
          }
        ]
      },
      "dspn": {
				"add": {
					"component_groups": [
						"dspn"
					]
				}
			}
    }
  }
}