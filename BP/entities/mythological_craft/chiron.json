{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "ocrp:chiron",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "components": {
      "minecraft:type_family": {"family": [ "mob", "centaur" ]},

      "minecraft:jump.static":{
        "jump_power": 0.42
      },

      "minecraft:can_climb": {},

      "minecraft:physics": {},

      "minecraft:loot": {"table": "loot_tables/entities/chiron.json"},
      
      "minecraft:health": {"value": 250, "max": 250},

      "minecraft:collision_box": {"width": 0.9, "height": 2.2},

      "minecraft:movement.basic": {
        "max_turn": 15
      },

      "minecraft:movement": {"value": 0.43},

      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": false,
        "avoid_damage_blocks": true
      },

      "minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? math.random(30, 50) : 35"
      },

      "minecraft:nameable": {},

      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },

      "minecraft:is_hidden_when_invisible": {},

      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },

      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },

      "minecraft:behavior.random_look_around": {"priority": 7},

      "minecraft:behavior.random_stroll": {"priority": 6, "speed_multiplier": 1},

      "minecraft:behavior.look_at_player": {"priority": 7, "look_distance": 6, "probability": 0.02},
      
      "minecraft:behavior.hurt_by_target": {"priority": 1},

      "minecraft:behavior.float": {
        "priority": 0
      },

      "minecraft:behavior.look_at_entity": {
				"priority": 7,
				"angle_of_view_horizontal": 45,
				"angle_of_view_vertical": 0,
				"probability": 100
			},

      "minecraft:behavior.look_at_target": {
        "priority": 9,
        "look_distance": 8.0,
        "probability": 1.0
      },

      "minecraft:follow_range": {
        "value": 16
      },

      "minecraft:scale": {
        "value": 1.85
      },

      "minecraft:boss": {
        "hud_range": 32,
        "name": "Chiron",
        "should_darken_sky": false
      },

      "minecraft:on_target_acquired": {
				"event": "target_acquired",
				"target": "self"
			},

			"minecraft:on_target_escape": {
				"event": "target_escape",
				"target": "self"
			},

      "minecraft:knockback_resistance": {
        "value": 0.7
      }
    },

    "component_groups": {
      "roaring": {
        "minecraft:is_saddled": {},
        "minecraft:timer": {
					"time": [1.35, 1.35],
					"looping": false,
					"time_down_event": {
						"event": "target_escape",
						"target": "self"
					}
				},
        "minecraft:movement": {
          "value": 0
        }
      },

      "minecraft:mode_switcher": {
        "minecraft:target_nearby_sensor": {
          "inside_range": 3.0,
          "outside_range": 5.0,
          "on_inside_range": {
            "event": "ocrp:entity_attack",
            "target": "self"
          },
          "on_outside_range": {
            "event": "minecraft:switch_to_ranged",
            "target": "self"
          }
        }
      },

      "minecraft:ranged_mode": {
        "minecraft:shooter": {
          "def": "ocrp:chiron_spear"
        },
        "minecraft:behavior.ranged_attack": {
          "priority": 1,
          "attack_interval_min": 1.0,
          "attack_interval_max": 3.0,
          "attack_radius": 15.0
        }
      },

      "player_sensor": {
        "minecraft:entity_sensor": {
					"sensor_range": 16,
					"event": "target_acquired",
					"event_filters": {
						"test": "is_family",
						"subject": "other",
						"operator": "==",
						"value": "player"
					}
				}
      },

      "normal_movement": {
        "minecraft:movement": {
          "value": 0.40
        }
      },

      "active_attack": { 
        "minecraft:timer": {
					"time": [0.1, 0.1],
					"looping": false,
					"time_down_event": {
						"event": "ocrp:entity_attack",
						"target": "self"
					}
				}
      },

      "attack1": {
        "minecraft:mark_variant": {
          "value": 1
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "track_target": false,
          "hit_delay_pct": 0.15,
          "reach_multiplier": 1.8,
          "speed_multiplier": 1.0,
          "attack_duration": 0.94
        },
        "minecraft:attack": {
          "damage": 9
        }
      },

      "attack2": {
        "minecraft:mark_variant": {
          "value": 2
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "track_target": false,
          "hit_delay_pct": 0.15,
          "reach_multiplier": 1.8,
          "speed_multiplier": 1.0,
          "attack_duration": 0.94
        },
        "minecraft:attack": {
          "damage": 14
        }
      },

      "attack3": {
        "minecraft:mark_variant": {
          "value": 3
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "track_target": false,
          "hit_delay_pct": 0.15,
          "reach_multiplier": 1.8,
          "speed_multiplier": 1.0,
          "attack_duration": 0.94
        },
        "minecraft:attack": {
          "damage": 12
        }
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "player_sensor",
            "minecraft:mode_switcher"
          ]
        }
      },
      "ocrp:entity_attack":{
        "randomize": [
          {
            "weight": 60,
            "add": {
              "component_groups": [
                "attack1"
              ]
            },
            "remove": {
              "component_groups": [
                "attack2",
                "attack3"
              ]
            }
          },
          {
            "weight": 45,
            "add": {
              "component_groups": [
                "attack2"
              ]
            },
            "remove": {
              "component_groups": [
                "attack1",
                "attack3"
              ]
            }
          },
          {
            "weight": 55,
            "add": {
              "component_groups": [
                "attack3"
              ]
            },
            "remove": {
              "component_groups": [
                "attack1",
                "attack2"
              ]
            }
          }
        ]
      },
      "target_acquired": {
				"add": {
					"component_groups": [
            "roaring"
          ]
				},
        "remove": {
					"component_groups": [
            "player_sensor"
          ]
				}
			},
			"target_escape": {
        "remove": {
					"component_groups": [
            "roaring"
          ]
				},
        "add": {
					"component_groups": [
            "active_attack",
            "normal_movement"
          ]
				}
      }, 
      "minecraft:switch_to_melee": {
        "remove": {
          "component_groups": [
            "minecraft:ranged_mode"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:melee_mode"
          ]
        }
      },
      "minecraft:switch_to_ranged": {
        "remove": {
          "component_groups": [
            "attack1",
            "attack2",
            "attack3"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:ranged_mode"
          ]
        }
      }
    }
  }
}