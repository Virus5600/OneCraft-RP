				"conditions": [
					{
						"allowed_faces": ["down"],
						"block_filter": [
							{
								"tags": "query.any_tag('rope')"
							}
						]
					}
				]
			}
		},
		"permutations": [
			{
				"condition": "query.block_state('rope:connected') == 7",
