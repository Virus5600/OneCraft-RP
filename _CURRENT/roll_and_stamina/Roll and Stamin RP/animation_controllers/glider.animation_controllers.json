{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.glider.move": {
			"states": {
				"default": {
					"animations": [
						{"first_person.idle": "context.is_first_person"},
						{"third_person.idle": "!context.is_first_person"}
					],
					"transitions": [
						{"use": "query.is_using_item && !query.is_on_ground && !query.is_in_water"}
					]
				},
				"use": {
					"animations": [
						{"first_person.use": "context.is_first_person"},
						{"third_person.use": "!context.is_first_person"}
					],
					"transitions": [
						{"default": "!query.is_using_item || query.is_on_ground || query.is_in_water || !query.is_item_name_any('slot.weapon.mainhand', 0, 'rns:glider')"}
					]
				}
			}
		}
	}
}